<script>
  function displaySweetAlert(type, message) {
    var iconMapping = {
      alert: "warning",
      notice: "info",
      success: "success",
      error: "error"
    };

    Swal.fire({
      icon: iconMapping[type],
      title: type.charAt(0).toUpperCase() + type.slice(1), // Title in title case
      html: message,
      showConfirmButton: false,
      timer: 3000
    });
  }
</script>

