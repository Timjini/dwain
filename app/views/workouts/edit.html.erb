<style>
    .container-box{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }
    .display-special{
        font-size: 10rem;
        font-weight: 900;
        color: #fff;
        text-shadow: 0 0 10px #fff;
    }

    .classy{
  min-height:150px;
}

.my-class{
  flex-wrap: wrap;
}


.description{
  height: 150px;
}

section {
}

.w-form{
  border-radius: 10px;
  -webkit-box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.75);
}

.confirm-btn:hover {
  opacity:0.8;
  }

.cancel-btn:hover{
  opacity:0.8;
}
</style>    

<%= form_with(model: @workout, data: { turbolinks: true }) do |f| %>

    <section>
      <div class="classy bg-gray-100 dark:bg-gray-900 dark:text-white text-gray-600"></div>
      <div style="display:flex;flex-direction:row;align-items:center;padding:50px;margin-top:-150px;">
          <a href="/workouts" class="mx-5">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 white dark:white">
                <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 9l-3 3m0 0l3 3m-3-3h7.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </a>
          <h1 class="font-bold text-3xl">Edit Workout</h1>
      </div>
    </section>
    <section>
      <div class="container w-form p-5 mt-5">
      <div class="row mb-5">
          <div class="col-md-3 p-2">
            <label class=" text-gray-900 dark:text-white">Title</label>
            <%= f.text_field :title , placeholder:"Something Catchy here :)" , class:"block w-full rounded-md border-0 py-1.5 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
          </div>
          <div class="col-md-5 p-2">
            <label class=" text-gray-900 dark:text-white">Add a Video Link</label>
            <%=f.text_field :video_link, placeholder:"https://", class:"block w-full rounded-md border-0 py-1.5 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
          </div>
          <div class="col-md-1 mt-3">
            <h4 class="display-6 font-bold"> OR </h4>
          </div>
          <div class="col-md-3 p-2">
            <label class=" text-gray-900 dark:text-white">Upload A Video</label>
            <%= f.file_field :video , class:"block w-full rounded-md border-0 py-1.5 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            <%if current_coach.present? %>
            <%= f.hidden_field :coach_id, value: current_coach.id %>
            <%end%>
          </div>
      </div>
      <div class="row mt-5">
          <div class="col-md-3">
            <label class=" text-gray-900 dark:text-white">Release Date</label>
            <%=f.date_field :release_date , class:"block w-full rounded-md border-0 py-1.5 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"%>
          </div>
          <div class="col-md-4">
            <div class="relative mt-2">
            <label class=" text-gray-900 dark:text-white">Cover Image</label>
                <%= f.file_field :image , class:"block w-full rounded-md border-0 py-1.5 pl-3 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>
      </div>
      <div class="row mt-5">
          <div class="col-md-6">
            <label class=" text-gray-900 dark:text-white">Description</label>
            <%= f.text_area :description, class:"description block w-full rounded-md border-0 py-1.5 pl-3 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder:"A rich text about the workout" %>
          </div>
      </div>
      <div class="row">
          <div class="col-md-7"></div>
          <div class="col-md-5 mt-5 text-end">
            <%= f.submit "Update Workout", class: "confirm-btn bg-gradient-to-r from-red-500 to-red-800 text-white font-bold py-3 px-4 rounded", style: "transition: background-color 0.3s;" %>
            <a href="/training_sessions" class=" cancel-btn bg-gradient-to-b from-gray-900 to-gray-600 bg-gradient-to-r text-white font-bold py-3 px-4 rounded">Cancel</a>
          </div>
      </div>
    </section>
<%end%>