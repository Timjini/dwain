  margin-right:10px;
  color:#f5f5f5;
}

svg{
  cursor:pointer;
}

.relatively{
  min-width: 200px;
}

/* mobile view */

@media (max-width: 767px) {
  .search-box{
    display:none;
  }
  .avatar-div{
    padding-left:100px;
    margin-right:-40px;
  }
}

.user-image{
      border-radius: 50%;
      height: 50px;
      width: 50px;
}

</style>

