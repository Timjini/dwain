<% if resource.errors.any? %>
  <script>
   <% flash.each do |type, message| %>
  <script>
    Swal.fire({
      title: "<%= type.to_s.titleize %>",
      html: "<%= message.html_safe %>",
      icon: "<%= type.to_s %>",
      showConfirmButton: false,
      timer: 3000
    });
  </script>
<% end %>

  </script>
<% end %>
